{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "sourceMap": true,

 /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,


    "paths": {
      "@/*": ["./src/*"],
      "@components/*" : ["./src/components/*"],
      "@context/*" : ["./src/context/*"],
      "@models/*" : ["./src/models/*"],
      "@pages/*" : ["./src/pages/*"],
      "@styles/*" : ["./src/styles/*"],
      "@assets/*" : ["./src/assets/*"],
      "@routes/*" : ["./src/routes/*"],
      "@utils/*" : ["./src/utils/*"],
      "@mock/*" : ["./src/mock/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
